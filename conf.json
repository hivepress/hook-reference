{
	"opts": {
		"destination": "docs",
		"template": "node_modules/wp-hookdoc/template",
		"recurse": true,
		"readme": "./templates/README.md"
	},
	"source": {
		"include": ["./hivepress"],
		"includePattern": ".+\\.(php)?$"
	},
	"plugins": [
		"node_modules/wp-hookdoc/plugin",
		"plugins/markdown"
	],
	"templates": {
		"default": {
			"layoutFile": "./templates/layout.tmpl",
			"staticFiles": {
				"include": [
					"./templates/static"
				]
			}
		}
	}
}
